<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_act">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg6"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/top1"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"/>




            <!-- ROW 1  -->
            <!-- COLUMN 1  -->



            <androidx.cardview.widget.CardView
                android:layout_width="220dp"
                app:cardCornerRadius="80dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:id="@+id/create"
                app:cardBackgroundColor="#8C9EFF"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/simg4"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Create user"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COLUMN 2  -->

            <androidx.cardview.widget.CardView
                android:layout_width="220dp"
                android:layout_gravity="center"
                app:cardCornerRadius="80dp"
                android:layout_height="0dp"
                android:id="@+id/viewu"
                android:layout_weight="2"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#B2FF59"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/simg7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_weight="10"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="User info"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!-- ROW 2  -->
            <!-- COLUMN 1  -->

            <androidx.cardview.widget.CardView
                android:layout_width="220dp"
                android:layout_gravity="center"
                app:cardCornerRadius="80dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:id="@+id/viewl"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#00B0FF"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/simg1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_weight="3"
                        android:layout_height="0dp" />

                    <TextView
                        android:text="User list"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COLUMN 2  -->


            <!-- ROW 3  -->
            <!-- COLUMN 1  -->

            <androidx.cardview.widget.CardView
                android:layout_width="220dp"
                android:layout_gravity="center"
                app:cardCornerRadius="80dp"
                android:layout_height="0dp"
                android:id="@+id/updatehw"
                android:layout_marginBottom="32dp"
                android:layout_weight="2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="#FF9100"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/simg7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_weight="3"
                        android:layout_height="0dp" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="Update HW"
                        android:textColor="#000"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- COLUMN 2  -->







    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>